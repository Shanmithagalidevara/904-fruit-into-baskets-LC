 class Solution:
    def totalFruit(self, fruits: List[int]) -> int:

        last = second_last = -1
        last_cnt = curr = res = 0

        for i in fruits:
            if i == last or i == second_last:
                curr += 1
            else:
                 curr = last_cnt + 1

            if i == last:
               last_cnt += 1
            else:
                last_cnt = 1
                second_last, last = last, i

            res = max(res, curr)

        return res
        
